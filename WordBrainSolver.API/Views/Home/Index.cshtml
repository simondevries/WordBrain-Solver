<!doctype html>
<html ng-app>
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"></script>
    <script>
    
    function FetchCtrl($scope, $http) {
        
        $scope.gridSize = '';
        $scope.wordLength = '';
        $scope.board = '';
    
        $scope.method = 'GET';

        $scope.fetch = function () {
            var request = 'http://wordbrainspuzzlesolver.azurewebsites.net/api/findwords?gridSize=' + $scope.gridSize + '&wordLength=' + $scope.wordLength + '&board=' + $scope.board + '&type=json';


            $http({ method: $scope.method, url: request })
                .success(function (data, status) {
                    $scope.status = status;
                    $scope.data = data;
                })
                .error(function (data, status) {
                    $scope.status = status;
                    $scope.data = "Request failed";
                });
        };

    }
    </script>
</head>

<body>
    <div ng-controller="FetchCtrl">

        <label>Enter word length</label>
        <input ng-model="wordLength">
        <br />
        <label>Enter Grid Width</label>
        <input ng-model="gridSize">
        <br />

        <label>  Enter Board (from left to right, top to down)</label>
        <input ng-model="board">
        <br />


        <input type="text" ng-model="url" size="80" />
        <button ng-click="fetch()">fetch</button><br>
        <pre>http status code: {{status}}</pre>

        Game Results: <i>{{data}}</i>
    </div>
</body>
</html>
